<editor>
    <formElement>
        <type>entry</type>
        <label>Configuration Name:</label>
        <property>config</property>
        <value/>
        <required>1</required>
        <documentation>Provide a unique name for the configuration, keeping in mind that you may need to create additional configurations over time.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Description:</label>
        <property>description</property>
        <value>Azure configuration.</value>
        <required>0</required>
        <documentation>A description for this configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Tenant ID:</label>
        <property>tenant_id</property>
        <value></value>
        <documentation>Enter the Azure Active Directory Tenant ID.</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Subscription ID:</label>
        <property>subscription_id</property>
        <value></value>
        <documentation>Enter the Azure Active Directory Subscription ID.</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>Client ID/Secret Key:</label>
        <property>credential</property>
        <required>1</required>
        <userNameLabel>Client ID:</userNameLabel>
        <passwordLabel>Secret Key:</passwordLabel>
        <retypePasswordLabel>Retype Secret Key:</retypePasswordLabel>
        <documentation>Azure Application Client ID and Secret(Password).</documentation>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>VM User/Password:</label>
        <property>vm_credential</property>
        <required>1</required>
        <documentation>Credentials for any virtual machines provisioned using this configuration.</documentation>
    </formElement>

    <formElement>
        <type>entry</type>
        <label>Resource Pool:</label>
        <property>resource_pool</property>
        <value>local</value>
        <documentation>The name of the pool of resources on which the integration steps can run.</documentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Debug Level:</label>
        <property>debug_level</property>
        <value>1</value>
        <documentation>Level for output: 0=errors only, 1=normal headers and responses, 2+=debugging information included.</documentation>
        <required>1</required>
    </formElement>
</editor>




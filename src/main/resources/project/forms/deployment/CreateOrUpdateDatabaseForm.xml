<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#CreateOrUpdateDatabase</help>
    <formElement>
        <label>Configuration:</label>
        <!-- Improvements for CEV-18687 -->
        <configuration>1</configuration>
        <!-- End of improvements for CEV-18687 -->
        <property>connection_config</property>
        <value/>
        <documentation>The name of the configuration which holds all the connection information for Windows Azure.</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Resource Group Name:</label>
        <property>resource_group_name</property>
        <value/>
        <documentation> The name of the Resource Group to which the Azure SQL Database Server belongs.</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Server name:</label>
        <property>server_name</property>
        <value/>
        <documentation>The short name (testsqlserver001, but not testsqlserver001.database.windows.net) of the Azure SQL Database Server on which the database is hosted.</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Database name:</label>
        <property>database_name</property>
        <value/>
        <documentation>The name of the Azure SQL Database to be operated on (Updated or created).</documentation>
        <required>1</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <type>select</type>
        <label>Location:</label>
        <property>location</property>
        <required>1</required>
        <documentation>Location of the resource.</documentation>
        <option><name>Brazil South</name><value>brazilsouth</value></option>
        <option><name>Central US</name><value>centralus</value></option>
        <option><name>East Asia</name><value>eastasia</value></option>
        <option><name>East US</name><value>eastus</value></option>
        <option><name>East US 2</name><value>eastus2</value></option>
        <option><name>Japan East</name><value>japaneast</value></option>
        <option><name>Japan West</name><value>japanwest</value></option>
        <option><name>North Central US</name><value>northcentralus</value></option>
        <option><name>North Europe</name><value>northeurope</value></option>
        <option><name>South Central US</name><value>southcentralus</value></option>
        <option><name>Southeast Asia</name><value>southeastasia</value></option>
        <option><name>West Europe</name><value>westeurope</value></option>
        <option><name>West US</name><value>westus</value></option>
    </formElement>
    <formElement>
        <type>select</type>
        <label>Edition:</label>
        <property>edition</property>
        <required>0</required>
        <documentation>Edition for the Azure Sql Database.</documentation>
        <option><name>Basic</name><value>basic</value></option>
        <option><name>Standard</name><value>standard</value></option>
        <option><name>Premium</name><value>premium</value></option>
    </formElement>
    <formElement>
        <label>Collation:</label>
        <property>collation</property>
        <value/>
        <documentation>Collation of the Azure Sql Database being created.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Create Mode:</label>
        <property>create_mode</property>
        <value/>
        <documentation>Create Mode for the Azure Sql Database being created.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Elastic Pool:</label>
        <property>elastic_pool</property>
        <value/>
        <documentation>The name of the Elastic Pool to put the Azure Sql Database in.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Maximum Size in MB:</label>
        <property>max_size_mb</property>
        <value/>
        <documentation>The maximum size of the Azure Sql Database being created or updated in megabytes.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Service Objective Id:</label>
        <property>service_objective_id</property>
        <value/>
        <documentation>The service objective to be applied to the Azure Sql Database being created or updated.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>Source Database Id:</label>
        <property>source_database_id</property>
        <value/>
        <documentation>The resource id of the database to use as the source for the copy being created.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
    <formElement>
        <label>JobStep Timeout:</label>
        <property>job_step_timeout</property>
        <value/>
        <documentation>Timeout for the step execution in minutes. Blank means no timeout.</documentation>
        <required>0</required>
        <type>entry</type>
    </formElement>
</editor>
